{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".vercel/**",
      ".next/**",
      ".vscode/**",
      "src/icons/**"
    ]
  },
  "formatter": {
    "indentStyle": "tab",
    "indentWidth": 1,
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".vercel/**",
      ".next/**",
      ".vscode/**"
    ]
  }
}
